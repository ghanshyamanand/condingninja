<% if notice.present? %>
  <div class="alert alert-success alert-dismissible notice-alert-div">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= notice %>
  </div>
<% end %>

<% if alert.present? %>
  <p class="alert alert-danger notice-alert-div">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= alert %>
  </p>
<% end %>
