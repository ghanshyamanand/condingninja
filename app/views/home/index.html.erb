<%= render 'navbar' %>
<br>
<br>
<div class="container">
  <% if @tickets.present? %>
    <table class="table table-striped">
      <caption>My Tickets</caption>
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">From</th>
          <th scope="col">Subject</th>
          <th scope="col">Assigned at</th>
          <th scope="col">Reply Status</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @tickets.each do |ticket| %>
          <tr>
            <th scope="row"><%= ticket.id %></th>
            <td><%= ticket.from_email %></td>
            <td><%= ticket.subject %></td>
            <td><%= ticket.assigned_at.strftime("%d-%B-%Y | %T%:z") %> </td>
            <td><%= ticket.reply_status ? "Yes" : "No" %></td>
            <td>
              <%= link_to "Reply", detail_ticket_path(ticket)  %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
